<h1>Add a driver</h1>

<%= form_for @driver do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :start_location %>
  <%= f.text_field :start_location %>

  <%= f.label :end_location %>
  <%= f.text_field :end_location %>

  <%= f.label :cost %>
  <%= f.text_field :cost %>

  <%= f.label :how_many %>
  <%= f.text_field :how_many %>

  <%= f.label :est_time %>
  <%= f.text_field :est_time %>

  <%= f.submit 'Submit', id: 'newDriverSubmit' %>
    
<% end %>